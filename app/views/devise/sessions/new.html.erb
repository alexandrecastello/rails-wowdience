<!-- Login Hero Section -->
<div class="devise-hero-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="text-center mb-5">
          <h1 class="display-4 fw-bold text-white mb-3 hero-title">Bem-vindo de Volta!</h1>
          <p class="lead text-white-50">Entre na sua conta Wowdience</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="devise-form-container">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-gradient-primary text-white text-center">
            <h4 class="mb-0 section-title">
              <i class="fas fa-sign-in-alt me-2"></i>
              Entrar
            </h4>
          </div>
          <div class="card-body p-4">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
              <div class="form-inputs">
                <div class="mb-4">
                  <%= f.label :email, "EndereÃ§o de Email", class: "form-label fw-semibold" %>
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              label: false,
                              placeholder: 'Digite seu email',
                              wrapper_html: { class: '' },
                              input_html: { class: 'form-control form-control-lg', autocomplete: "email" } %>
                </div>

                <div class="mb-4">
                  <%= f.label :password, "Senha", class: "form-label fw-semibold" %>
                  <%= f.input :password,
                              required: false,
                              label: false,
                              placeholder: 'Digite sua senha',
                              wrapper_html: { class: '' },
                              input_html: { class: 'form-control form-control-lg', autocomplete: "current-password" } %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="mb-4">
                    <div class="form-check">
                      <%= f.input :remember_me, as: :boolean,
                          label: 'Lembrar de mim',
                          wrapper_html: { class: 'form-check' },
                          input_html: { class: 'form-check-input' } %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="form-actions d-grid">
                <%= f.button :submit, "Entrar",
                    class: 'btn btn-primary btn-lg',
                    data: { disable_with: 'Entrando...' } %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
