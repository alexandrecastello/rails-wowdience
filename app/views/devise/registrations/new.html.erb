<!-- Registration Hero Section -->
<div class="devise-hero-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="text-center mb-5">
          <h1 class="display-4 fw-bold text-white mb-3 hero-title">Junte-se ao Wowdience!</h1>
          <p class="lead text-white-50">Crie sua conta e comece a descobrir eventos incríveis</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="devise-form-container">
        <div class="card shadow-lg border-0">
          <div class="card-header bg-gradient-primary text-white text-center">
            <h4 class="mb-0 section-title">
              <i class="fas fa-user-plus me-2"></i>
              Criar Conta
            </h4>
          </div>
          <div class="card-body p-4">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-4">
                      <%= f.label :first_name, "Nome", class: "form-label fw-semibold" %>
                      <%= f.input :first_name,
                                  required: true,
                                  autofocus: true,
                                  label: false,
                                  placeholder: 'Digite seu nome',
                                  wrapper_html: { class: '' },
                                  input_html: { class: 'form-control form-control-lg' } %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-4">
                      <%= f.label :last_name, "Sobrenome", class: "form-label fw-semibold" %>
                      <%= f.input :last_name,
                                  required: true,
                                  label: false,
                                  placeholder: 'Digite seu sobrenome',
                                  wrapper_html: { class: '' },
                                  input_html: { class: 'form-control form-control-lg' } %>
                    </div>
                  </div>
                </div>

                <div class="mb-4">
                  <%= f.label :email, "Endereço de Email", class: "form-label fw-semibold" %>
                  <%= f.input :email,
                              required: true,
                              label: false,
                              placeholder: 'Digite seu email',
                              wrapper_html: { class: '' },
                              input_html: { class: 'form-control form-control-lg', autocomplete: "email" } %>
                </div>

                <div class="mb-4">
                  <%= f.label :password, "Senha", class: "form-label fw-semibold" %>
                  <%= f.input :password,
                              required: true,
                              label: false,
                              placeholder: 'Crie uma senha',
                              hint: ("mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                              wrapper_html: { class: '' },
                              input_html: { class: 'form-control form-control-lg', autocomplete: "new-password" } %>
                </div>

                <div class="mb-4">
                  <%= f.label :password_confirmation, "Confirmar Senha", class: "form-label fw-semibold" %>
                  <%= f.input :password_confirmation,
                              required: true,
                              label: false,
                              placeholder: 'Confirme sua senha',
                              wrapper_html: { class: '' },
                              input_html: { class: 'form-control form-control-lg', autocomplete: "new-password" } %>
                </div>
              </div>

              <div class="form-actions d-grid">
                <%= f.button :submit, "Criar Conta",
                    class: 'btn btn-primary btn-lg',
                    data: { disable_with: 'Criando conta...' } %>
              </div>
            <% end %>

            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
