<%= simple_form_for(event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :name %>
  </div>

  <div class="field">
    <%= form.input :start_date, as: :date %>
  </div>

  <div class="field">
    <%= form.association :location, collection: Location.all.map { |location| [location.name, location.id] }, prompt: 'Select a location' %>
    <%= text_field_tag :location_name, params[:location_name], label: 'Or create a new location' %>
  </div>

  <div class="actions">
    <%= form.button :submit %>
  </div>
<% end %>
